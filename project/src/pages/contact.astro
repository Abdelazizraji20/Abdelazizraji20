---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <section class="py-16 container mx-auto px-4">
    <h1 class="text-3xl font-bold text-center mb-12">Contactez-nous</h1>
    <div class="max-w-2xl mx-auto">
      <form class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Nom complet</label>
          <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
        </div>
        <div>
          <label for="subject" class="block text-sm font-medium text-gray-700">Sujet</label>
          <select id="subject" name="subject" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
            <option>Soutien Scolaire</option>
            <option>Cours de Langues</option>
            <option>Robotique</option>
            <option>Autre</option>
          </select>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
          <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary"></textarea>
        </div>
        <div>
          <button type="submit" class="w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-secondary transition-colors">
            Envoyer
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>